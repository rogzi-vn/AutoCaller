<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBar.Default</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar.Default</item>
    </style>

    <style name="EditText.Default" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_default</item>
        <item name="android:textColor">#000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#9d9d9d</item>
    </style>

    <style name="EditText.Default.NoPadding" parent="EditText.Default">
        <item name="android:padding">@null</item>
    </style>

    <style name="BlockNotifier" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/textview_default</item>
        <item name="android:textColor">#721c24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Danger" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_danger</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Warning" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_warning</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionBar.Default" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_default</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_default</item>
    </style>
</resources>